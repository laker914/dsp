		,{  dataIndex: 'provident_base',header:'公积金基数' , width:50 }	
		,{  dataIndex: 'bargain_begin',header:'合同开始日期', width:50 }
		,{  dataIndex: 'bargain_end',header:'合同结束日期', width:50 }
		,{  dataIndex: 'hukou',header:'户口' , width:40, renderer:function(value){
			for(var i in HUKOU){
